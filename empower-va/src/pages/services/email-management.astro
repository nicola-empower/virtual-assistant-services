---
import MainLayout from "../../layouts/MainLayout.astro";
import {
    Mail,
    Filter,
    MessageSquare,
    Quote,
    ArrowRight,
    CheckCircle2,
    Clock,
    Zap,
    Smile,
} from "lucide-react";

export const prerender = true;
---

<MainLayout title="Professional Email Management | Empower VA">
    <main>
        <!-- HERO SECTION -->
        <section class="relative py-24 bg-slate-900 text-white overflow-hidden">
            <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10">
            </div>
            <div
                class="max-w-7xl mx-auto px-6 relative z-10 grid lg:grid-cols-2 gap-12 items-center"
            >
                <div>
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-500/10 border border-teal-500/20 text-teal-400 text-xs font-bold uppercase tracking-wide mb-6"
                    >
                        <span class="w-2 h-2 rounded-full bg-teal-500"></span>
                        Communication Support
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-extrabold mb-6 tracking-tight leading-tight"
                    >
                        Conquer Your <br />
                        <span
                            class="text-transparent bg-clip-text bg-linear-to-r from-teal-400 to-purple-400"
                            >Inbox Overwhelm</span
                        >
                    </h1>
                    <p
                        class="text-xl text-slate-300 mb-8 max-w-lg leading-relaxed"
                    >
                        Stop drowning in unread messages. We implement systems
                        to declutter, prioritise, and manage your email so you
                        never miss an opportunity again.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a
                            href="#contact"
                            class="px-8 py-4 bg-teal-600 hover:bg-teal-500 text-white font-bold rounded-lg transition-all shadow-lg shadow-teal-900/20 flex items-center gap-2"
                        >
                            Reclaim Your Inbox <ArrowRight
                                className="w-5 h-5"
                            />
                        </a>
                    </div>
                </div>
                <div class="relative hidden lg:block">
                    <div
                        class="absolute inset-0 bg-linear-to-tr from-teal-500/20 to-purple-500/20 rounded-2xl blur-2xl"
                    >
                    </div>
                    <!-- Mockup: Inbox Interface -->
                    <div
                        class="bg-white text-slate-900 rounded-2xl p-6 relative shadow-2xl border border-slate-200"
                    >
                        <div
                            class="flex items-center justify-between mb-6 border-b border-slate-100 pb-4"
                        >
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 rounded-full bg-red-400">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-yellow-400">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-green-400">
                                </div>
                            </div>
                            <div
                                class="text-xs font-bold text-slate-400 uppercase tracking-wider"
                            >
                                Inbox (0)
                            </div>
                        </div>
                        <div class="space-y-3">
                            <div
                                class="flex items-start gap-4 p-4 bg-teal-50 rounded-xl border border-teal-100"
                            >
                                <div
                                    class="p-2 bg-teal-100 rounded-full text-teal-600"
                                >
                                    <CheckCircle2 className="w-5 h-5" />
                                </div>
                                <div>
                                    <div class="font-bold text-slate-800">
                                        Inbox Zero Reached!
                                    </div>
                                    <p class="text-sm text-slate-600">
                                        All priority messages have been flagged.
                                        Spam archived.
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3 p-3 opacity-50">
                                <div class="w-8 h-8 rounded-full bg-slate-200">
                                </div>
                                <div class="space-y-2 flex-1">
                                    <div class="h-2 bg-slate-200 rounded w-1/3">
                                    </div>
                                    <div
                                        class="h-2 bg-slate-100 rounded w-full"
                                    >
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center gap-3 p-3 opacity-50">
                                <div class="w-8 h-8 rounded-full bg-slate-200">
                                </div>
                                <div class="space-y-2 flex-1">
                                    <div class="h-2 bg-slate-200 rounded w-1/4">
                                    </div>
                                    <div class="h-2 bg-slate-100 rounded w-3/4">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FEATURES SECTION -->
        <section class="py-24 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="space-y-24">
                    <!-- Feature 1 -->
                    <div class="grid md:grid-cols-2 gap-12 items-center">
                        <div class="order-2 md:order-1">
                            <div
                                class="w-14 h-14 bg-purple-50 rounded-xl flex items-center justify-center mb-6"
                            >
                                <Mail className="w-7 h-7 text-purple-600" />
                            </div>
                            <h2 class="text-3xl font-bold text-slate-900 mb-4">
                                Inbox Organisation & Decluttering
                            </h2>
                            <p
                                class="text-slate-600 leading-relaxed text-lg mb-6"
                            >
                                We transform chaotic inboxes into streamlined
                                workflows. By creating folders, labels, and
                                archiving rules, we ensure every email has a
                                home and your workspace remains clean.
                            </p>
                            <ul class="space-y-3">
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Unsubscribe from junk
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Custom categorisation
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Daily maintenance
                                </li>
                            </ul>
                        </div>
                        <div
                            class="order-1 md:order-2 bg-slate-50 rounded-2xl p-8 border border-slate-100"
                        >
                            <div class="space-y-4 opacity-80">
                                <div class="h-4 bg-slate-200 rounded w-3/4">
                                </div>
                                <div
                                    class="h-32 bg-white rounded border border-slate-200 shadow-sm p-4 flex flex-col justify-center items-center text-slate-400"
                                >
                                    <Mail className="w-8 h-8 mb-2 opacity-50" />
                                    <span>Structured Folders</span>
                                </div>
                                <div class="h-4 bg-slate-200 rounded w-1/2">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Feature 2 -->
                    <div class="grid md:grid-cols-2 gap-12 items-center">
                        <div
                            class="bg-slate-50 rounded-2xl p-8 border border-slate-100"
                        >
                            <div class="space-y-4 opacity-80">
                                <div class="h-4 bg-slate-200 rounded w-3/4">
                                </div>
                                <div
                                    class="h-32 bg-white rounded border border-slate-200 shadow-sm p-4 flex flex-col justify-center items-center text-slate-400"
                                >
                                    <Filter
                                        className="w-8 h-8 mb-2 opacity-50"
                                    />
                                    <span>Priority Filters</span>
                                </div>
                                <div class="h-4 bg-slate-200 rounded w-1/2">
                                </div>
                            </div>
                        </div>
                        <div>
                            <div
                                class="w-14 h-14 bg-blue-50 rounded-xl flex items-center justify-center mb-6"
                            >
                                <Filter className="w-7 h-7 text-blue-600" />
                            </div>
                            <h2 class="text-3xl font-bold text-slate-900 mb-4">
                                Priority Management
                            </h2>
                            <p
                                class="text-slate-600 leading-relaxed text-lg mb-6"
                            >
                                Never miss a client enquiry or urgent request.
                                We implement "Triage" systems to flag what needs
                                your immediate attention and handle or file the
                                rest for later.
                            </p>
                            <ul class="space-y-3">
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Urgent vs Important filtering
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Follow-up reminders
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Spam protection
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Feature 3 -->
                    <div class="grid md:grid-cols-2 gap-12 items-center">
                        <div class="order-2 md:order-1">
                            <div
                                class="w-14 h-14 bg-orange-50 rounded-xl flex items-center justify-center mb-6"
                            >
                                <MessageSquare
                                    className="w-7 h-7 text-orange-600"
                                />
                            </div>
                            <h2 class="text-3xl font-bold text-slate-900 mb-4">
                                Automated Responses & Templates
                            </h2>
                            <p
                                class="text-slate-600 leading-relaxed text-lg mb-6"
                            >
                                Speed up your communication without sounding
                                robotic. We set up smart auto-responders for
                                common queries and build a library of templates
                                for your frequent emails.
                            </p>
                            <ul class="space-y-3">
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Out-of-office sequences
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> FAQ template library
                                </li>
                                <li
                                    class="flex items-center gap-2 text-slate-700"
                                >
                                    <CheckCircle2
                                        className="w-4 h-4 text-teal-500"
                                    /> Professional signatures
                                </li>
                            </ul>
                        </div>
                        <div
                            class="order-1 md:order-2 bg-slate-50 rounded-2xl p-8 border border-slate-100"
                        >
                            <div class="space-y-4 opacity-80">
                                <div class="h-4 bg-slate-200 rounded w-full">
                                </div>
                                <div class="h-4 bg-slate-200 rounded w-full">
                                </div>
                                <div
                                    class="h-32 bg-white rounded border border-slate-200 shadow-sm p-4 flex flex-col justify-center items-center text-slate-400"
                                >
                                    <MessageSquare
                                        className="w-8 h-8 mb-2 opacity-50"
                                    />
                                    <span>Instant Replies</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- BENEFITS SECTION -->
        <section class="py-24 bg-slate-50 border-y border-slate-200">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-slate-900 mb-4">
                        Why Outsource Email?
                    </h2>
                    <p class="text-slate-600 max-w-2xl mx-auto">
                        It's about more than just a clean inbox. It's about
                        mental clarity and business velocity.
                    </p>
                </div>
                <div class="grid md:grid-cols-3 gap-8">
                    <div
                        class="bg-white p-6 rounded-xl shadow-sm border border-slate-200 text-center"
                    >
                        <div
                            class="w-12 h-12 bg-teal-50 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <Smile className="w-6 h-6 text-teal-600" />
                        </div>
                        <h3 class="font-bold text-lg text-slate-900 mb-2">
                            Reduced Stress
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Eliminate the anxiety of undefined "to-dos" burying
                            your inbox.
                        </p>
                    </div>
                    <div
                        class="bg-white p-6 rounded-xl shadow-sm border border-slate-200 text-center"
                    >
                        <div
                            class="w-12 h-12 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <Clock className="w-6 h-6 text-purple-600" />
                        </div>
                        <h3 class="font-bold text-lg text-slate-900 mb-2">
                            Faster Response Times
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Impress clients with prompt replies, even when
                            you're busy working.
                        </p>
                    </div>
                    <div
                        class="bg-white p-6 rounded-xl shadow-sm border border-slate-200 text-center"
                    >
                        <div
                            class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <Zap className="w-6 h-6 text-blue-600" />
                        </div>
                        <h3 class="font-bold text-lg text-slate-900 mb-2">
                            Higher Productivity
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Spend time on deep work, not shuffling messages
                            around.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- TESTIMONIAL SECTION -->
        <section class="py-24 bg-white">
            <div class="max-w-4xl mx-auto px-6 text-center">
                <Quote className="w-12 h-12 text-teal-500/30 mx-auto mb-6" />
                <blockquote
                    class="text-2xl md:text-3xl font-bold text-slate-900 mb-8 leading-tight"
                >
                    "I used to dread opening my email every morning. Now, I
                    start my day knowing everything is organized and only the
                    important stuff needs my attention. It's a game changer."
                </blockquote>
                <div class="flex items-center justify-center gap-4">
                    <div
                        class="w-12 h-12 bg-slate-200 rounded-full overflow-hidden"
                    >
                        <!-- Placeholder -->
                        <div class="w-full h-full bg-slate-300"></div>
                    </div>
                    <div class="text-left">
                        <div class="font-bold text-slate-900">
                            Mark Thompson
                        </div>
                        <div class="text-sm text-slate-600">
                            CEO, TechStart Ltd
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SISTER AGENCIES SECTION (Reused) -->
        <section class="py-24 bg-slate-900 overflow-hidden relative">
            <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5"></div>
            <div class="max-w-7xl mx-auto px-6 relative z-10">
                <div class="text-center mb-16">
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 text-xs font-bold uppercase tracking-wide mb-4"
                    >
                        The Empower Ecosystem
                    </div>
                    <h2 class="text-3xl font-bold text-white mb-4">
                        Complete Digital Coverage
                    </h2>
                    <p class="text-slate-400 max-w-2xl mx-auto">
                        We don't just fix computers. Through our sister
                        agencies, we build enterprise-grade platforms and
                        automate complex workflows.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-6">
                    <!-- Automation -->
                    <a
                        href="https://empowerautomation.co.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-teal-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-teal-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-teal-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-teal-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M12 2v4"></path><path
                                    d="m16.2 7.8 2.9-2.9"></path><path
                                    d="M18 12h4"></path><path
                                    d="m16.2 16.2 2.9 2.9"></path><path
                                    d="M12 18v4"></path><path
                                    d="m4.9 19.1 2.9-2.9"></path><path
                                    d="M2 12h4"></path><path
                                    d="m4.9 4.9 2.9 2.9"></path></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-teal-400 transition-colors"
                        >
                            Empower Automation
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            Zapier, Make.com, and custom scripts to put your
                            business on autopilot.
                        </p>
                    </a>

                    <!-- Digital Solutions -->
                    <a
                        href="https://empowerdigitalsolutions.co.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-purple-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-purple-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-purple-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><rect width="20" height="14" x="2" y="3" rx="2"
                                ></rect><line x1="8" x2="16" y1="21" y2="21"
                                ></line><line x1="12" x2="12" y1="17" y2="21"
                                ></line></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-purple-400 transition-colors"
                        >
                            Empower Digital
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            High-performance bespoke websites and custom web
                            applications.
                        </p>
                    </a>

                    <!-- Portfolio -->
                    <a
                        href="https://nicolaberry.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-amber-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-amber-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-amber-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-amber-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="m16 18 2 2 4-4"></path><path
                                    d="M16 2v4"></path><path d="M8 2v4"
                                ></path><path d="M3 10h18"></path><path
                                    d="M10 14h4"></path><path d="M12 14v4"
                                ></path><rect
                                    x="3"
                                    y="4"
                                    width="18"
                                    height="16"
                                    rx="2"></rect></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-amber-400 transition-colors"
                        >
                            Nicola Berry
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            Senior Developer Portfolio. View code samples and
                            engineering projects.
                        </p>
                    </a>
                </div>
            </div>
        </section>

        <!-- CTA SECTION -->
        <section id="contact" class="py-24 bg-white text-center">
            <div class="max-w-4xl mx-auto px-6">
                <h2 class="text-4xl font-extrabold text-slate-900 mb-6">
                    Ready for Inbox Zero?
                </h2>
                <p class="text-xl text-slate-600 mb-10 max-w-2xl mx-auto">
                    Let us take over your email management so you can stop
                    scrolling and start leading.
                </p>
                <a
                    href="/contact"
                    class="inline-flex items-center gap-2 px-8 py-4 bg-slate-900 text-white font-bold rounded-lg hover:bg-slate-800 transition-all shadow-xl text-lg"
                >
                    Start Delegating Today <ArrowRight className="w-5 h-5" />
                </a>
            </div>
        </section>
    </main>
</MainLayout>
