---
import MainLayout from "../../layouts/MainLayout.astro";
import {
    Laptop,
    Settings,
    ShieldCheck,
    HelpCircle,
    ArrowRight,
    CheckCircle2,
} from "lucide-react";

export const prerender = true;
---

<MainLayout title="Tech Support for Small Business | Empower VA">
    <main>
        <!-- HERO SECTION -->
        <section class="relative py-24 bg-slate-900 text-white overflow-hidden">
            <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10">
            </div>
            <div
                class="max-w-7xl mx-auto px-6 relative z-10 grid lg:grid-cols-2 gap-12 items-center"
            >
                <div>
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-500/10 border border-teal-500/20 text-teal-400 text-xs font-bold uppercase tracking-wide mb-6"
                    >
                        <span class="w-2 h-2 rounded-full bg-teal-500"></span>
                        Technical Assistance
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-extrabold mb-6 tracking-tight leading-tight"
                    >
                        Comprehensive <br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-purple-400"
                            >Tech Support</span
                        > for Businesses
                    </h1>
                    <p
                        class="text-xl text-slate-300 mb-8 max-w-lg leading-relaxed"
                    >
                        Don't let technical glitches slow you down. We provide
                        reliable troubleshooting, setup, and maintenance for
                        your business systems.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a
                            href="#contact"
                            class="px-8 py-4 bg-teal-600 hover:bg-teal-500 text-white font-bold rounded-lg transition-all shadow-lg shadow-teal-900/20 flex items-center gap-2"
                        >
                            Get Tech Help <ArrowRight className="w-5 h-5" />
                        </a>
                    </div>
                </div>
                <div class="relative hidden lg:block">
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-teal-500/20 to-purple-500/20 rounded-2xl blur-2xl"
                    >
                    </div>
                    <div
                        class="bg-slate-800 border border-slate-700 rounded-2xl p-8 relative shadow-2xl"
                    >
                        <div
                            class="flex items-center gap-4 mb-6 border-b border-slate-700 pb-4"
                        >
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-green-500">
                            </div>
                        </div>
                        <div class="space-y-4 font-mono text-sm">
                            <div class="text-slate-400">
                                > Initiating system diagnostic...
                            </div>
                            <div class="text-teal-400">
                                √ Connection established
                            </div>
                            <div class="text-slate-400">
                                > Checking cloud configurations...
                            </div>
                            <div class="text-teal-400">√ OneDrive synced</div>
                            <div class="text-teal-400">√ 1Password secure</div>
                            <div class="text-slate-400">
                                > System status: <span class="text-green-400"
                                    >OPERATIONAL</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FEATURES SECTION -->
        <section class="py-24 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid md:grid-cols-3 gap-12">
                    <!-- Feature 1 -->
                    <div class="space-y-4 group">
                        <div
                            class="w-14 h-14 bg-teal-50 rounded-xl flex items-center justify-center group-hover:bg-teal-100 transition-colors"
                        >
                            <Laptop className="w-7 h-7 text-teal-600" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900">
                            Remote Troubleshooting
                        </h3>
                        <p class="text-slate-600 leading-relaxed">
                            Quick resolution for software glitches, email
                            issues, and device connectivity problems. We act as
                            your remote IT department.
                        </p>
                    </div>

                    <!-- Feature 2 -->
                    <div class="space-y-4 group">
                        <div
                            class="w-14 h-14 bg-purple-50 rounded-xl flex items-center justify-center group-hover:bg-purple-100 transition-colors"
                        >
                            <Settings className="w-7 h-7 text-purple-600" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900">
                            System Setup & Config
                        </h3>
                        <p class="text-slate-600 leading-relaxed">
                            New laptop? Switching to a new CRM? We handle the
                            setup, user accounts, and software installation so
                            you're ready to work.
                        </p>
                    </div>

                    <!-- Feature 3 -->
                    <div class="space-y-4 group">
                        <div
                            class="w-14 h-14 bg-blue-50 rounded-xl flex items-center justify-center group-hover:bg-blue-100 transition-colors"
                        >
                            <ShieldCheck className="w-7 h-7 text-blue-600" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900">
                            Maintenance & Updates
                        </h3>
                        <p class="text-slate-600 leading-relaxed">
                            Regular checks to ensure your operating systems and
                            critical applications are up-to-date and secure from
                            vulnerabilities.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- SISTER AGENCIES SECTION -->
        <section class="py-24 bg-slate-900 overflow-hidden relative">
            <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5"></div>
            <div class="max-w-7xl mx-auto px-6 relative z-10">
                <div class="text-center mb-16">
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 text-xs font-bold uppercase tracking-wide mb-4"
                    >
                        The Empower Ecosystem
                    </div>
                    <h2 class="text-3xl font-bold text-white mb-4">
                        Complete Digital Coverage
                    </h2>
                    <p class="text-slate-400 max-w-2xl mx-auto">
                        We don't just fix computers. Through our sister
                        agencies, we build enterprise-grade platforms and
                        automate complex workflows.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-6">
                    <!-- Automation -->
                    <a
                        href="https://empowerautomation.co.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-teal-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-teal-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-teal-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-teal-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M12 2v4"></path><path
                                    d="m16.2 7.8 2.9-2.9"></path><path
                                    d="M18 12h4"></path><path
                                    d="m16.2 16.2 2.9 2.9"></path><path
                                    d="M12 18v4"></path><path
                                    d="m4.9 19.1 2.9-2.9"></path><path
                                    d="M2 12h4"></path><path
                                    d="m4.9 4.9 2.9 2.9"></path></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-teal-400 transition-colors"
                        >
                            Empower Automation
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            Zapier, Make.com, and custom scripts to put your
                            business on autopilot.
                        </p>
                    </a>

                    <!-- Digital Solutions -->
                    <a
                        href="https://empowerdigitalsolutions.co.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-purple-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-purple-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-purple-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><rect width="20" height="14" x="2" y="3" rx="2"
                                ></rect><line x1="8" x2="16" y1="21" y2="21"
                                ></line><line x1="12" x2="12" y1="17" y2="21"
                                ></line></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-purple-400 transition-colors"
                        >
                            Empower Digital
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            High-performance bespoke websites and custom web
                            applications.
                        </p>
                    </a>

                    <!-- Portfolio -->
                    <a
                        href="https://nicolaberry.uk"
                        target="_blank"
                        class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-amber-500/50 transition-colors"
                    >
                        <div
                            class="absolute top-4 right-4 text-slate-600 group-hover:text-amber-400 transition-colors"
                        >
                            <ArrowRight
                                className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
                            />
                        </div>
                        <div
                            class="w-12 h-12 rounded-lg bg-amber-500/10 flex items-center justify-center mb-6"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-6 h-6 text-amber-400"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="m16 18 2 2 4-4"></path><path
                                    d="M16 2v4"></path><path d="M8 2v4"
                                ></path><path d="M3 10h18"></path><path
                                    d="M10 14h4"></path><path d="M12 14v4"
                                ></path><rect
                                    x="3"
                                    y="4"
                                    width="18"
                                    height="16"
                                    rx="2"></rect></svg
                            >
                        </div>
                        <h3
                            class="text-xl font-bold text-white mb-2 group-hover:text-amber-400 transition-colors"
                        >
                            Nicola Berry
                        </h3>
                        <p class="text-sm text-slate-400 leading-relaxed">
                            Senior Developer Portfolio. View code samples and
                            engineering projects.
                        </p>
                    </a>
                </div>
            </div>
        </section>

        <!-- FAQ SECTION -->
        <section class="py-24 bg-slate-50 border-y border-slate-200">
            <div class="max-w-3xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-slate-900 mb-4">
                        Frequently Asked Questions
                    </h2>
                    <p class="text-slate-600">
                        Common questions about our tech support services.
                    </p>
                </div>

                <div class="space-y-4">
                    <details
                        class="group bg-white p-6 rounded-xl border border-slate-200 shadow-sm cursor-pointer open:ring-2 open:ring-teal-500/20"
                    >
                        <summary
                            class="flex justify-between items-center font-bold text-slate-900 list-none"
                        >
                            Do you support Mac and PC?
                            <span class="transition group-open:rotate-180">
                                <svg
                                    fill="none"
                                    height="24"
                                    shape-rendering="geometricPrecision"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    viewBox="0 0 24 24"
                                    width="24"
                                    ><path d="M6 9l6 6 6-6"></path></svg
                                >
                            </span>
                        </summary>
                        <p class="text-slate-600 mt-4 leading-relaxed">
                            Yes! We are proficient in both macOS and Windows
                            environments, as well as iOS and Android mobile
                            devices.
                        </p>
                    </details>

                    <details
                        class="group bg-white p-6 rounded-xl border border-slate-200 shadow-sm cursor-pointer open:ring-2 open:ring-teal-500/20"
                    >
                        <summary
                            class="flex justify-between items-center font-bold text-slate-900 list-none"
                        >
                            How quickly can you respond?
                            <span class="transition group-open:rotate-180">
                                <svg
                                    fill="none"
                                    height="24"
                                    shape-rendering="geometricPrecision"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    viewBox="0 0 24 24"
                                    width="24"
                                    ><path d="M6 9l6 6 6-6"></path></svg
                                >
                            </span>
                        </summary>
                        <p class="text-slate-600 mt-4 leading-relaxed">
                            For retainer clients, we offer priority response
                            times (typically within 4 business hours). Ad-hoc
                            requests are scheduled based on current
                            availability.
                        </p>
                    </details>

                    <details
                        class="group bg-white p-6 rounded-xl border border-slate-200 shadow-sm cursor-pointer open:ring-2 open:ring-teal-500/20"
                    >
                        <summary
                            class="flex justify-between items-center font-bold text-slate-900 list-none"
                        >
                            Can you help with my website too?
                            <span class="transition group-open:rotate-180">
                                <svg
                                    fill="none"
                                    height="24"
                                    shape-rendering="geometricPrecision"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    viewBox="0 0 24 24"
                                    width="24"
                                    ><path d="M6 9l6 6 6-6"></path></svg
                                >
                            </span>
                        </summary>
                        <p class="text-slate-600 mt-4 leading-relaxed">
                            Absolutely. We can assist with basic website
                            updates, content publishing, and troubleshooting for
                            platforms like WordPress, Squarespace, and Wix.
                        </p>
                    </details>
                </div>
            </div>
        </section>

        <!-- CTA SECTION -->
        <section id="contact" class="py-24 bg-white text-center">
            <div class="max-w-4xl mx-auto px-6">
                <h2 class="text-4xl font-extrabold text-slate-900 mb-6">
                    Need Immediate Assistance?
                </h2>
                <p class="text-xl text-slate-600 mb-10 max-w-2xl mx-auto">
                    Don't waste another hour fighting with your computer. Let us
                    handle the tech so you can handle the business.
                </p>
                <a
                    href="/contact"
                    class="inline-flex items-center gap-2 px-8 py-4 bg-slate-900 text-white font-bold rounded-lg hover:bg-slate-800 transition-all shadow-xl text-lg"
                >
                    Book Tech Support <ArrowRight className="w-5 h-5" />
                </a>
            </div>
        </section>
    </main>
</MainLayout>
