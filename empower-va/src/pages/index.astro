---
import MainLayout from '../layouts/MainLayout.astro';
import HeroProcessor from '../components/HeroProcessor.jsx';
import HeroBackground from '../components/HeroBackground.astro';
import OverwhelmCalculator from '../components/OverwhelmCalculator.jsx';
import { ArrowUpRight, Check, Zap, Shield, Globe, Clock, Star, ArrowRight } from 'lucide-react';

const services = [
  {
    title: "Executive Admin",
    description: "For the CEO who is drowning in emails. We handle the noise so you can focus on the signal.",
    icon: Shield,
    features: ["Inbox Management", "Calendar Tetris", "Travel Booking"]
  },
  {
    title: "Lifestyle & Personal",
    description: "For the human behind the business. We manage your life logic so you can enjoy your downtime.",
    icon: Globe,
    features: ["Appointment Booking", "Travel Research", "Life Admin"]
  },
  {
    title: "Project Operations",
    description: "For the visionary with too many ideas. We turn your concepts into actionable project plans.",
    icon: Zap,
    features: ["Launch Management", "SOP Creation", "Team Coordination"]
  }
];

const pricing = [
  {
    name: "The Starter",
    hours: "10 Hours",
    tagline: "The Chaos Tamer",
    price: "£450",
    features: ["Email & Calendar Management", "Basic Research", "Monthly Report"]
  },
  {
    name: "The Growth",
    hours: "20 Hours",
    tagline: "The Right Hand",
    price: "£850",
    features: ["All Starter Features", "Project Support", "SOP Creation", "Weekly Check-ins"],
    popular: true
  },
  {
    name: "The Partner",
    hours: "40 Hours",
    tagline: "The OBM",
    price: "£1,600",
    features: ["Full Business Operations", "Team Management", "System Architecture", "Daily Syncs"]
  }
];
---

<MainLayout title="Empower VA | Operational Architecture">
  
  <main class="relative min-h-screen">
    <HeroBackground />

    <div class="max-w-7xl mx-auto px-6 pt-32 pb-20 relative z-10">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        
        <!-- LEFT: THE COPY -->
        <div class="space-y-8">
          
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-50 border border-teal-100 text-xs font-bold text-teal-800 uppercase tracking-wide">
            <span class="w-2 h-2 rounded-full bg-teal-600"></span>
            Operational Architecture
          </div>

          <h1 class="text-5xl md:text-6xl font-extrabold text-slate-900 tracking-tight leading-[1.1]">
            Don't just delegate. <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#1A565E] to-[#9F89B6]">
              Optimise.
            </span>
          </h1>

          <p class="text-lg text-slate-600 max-w-lg leading-relaxed">
            Most Virtual Assistants just do the work. We engineer the workflow so the work disappears. 
            Designed for founders who need a <span class="font-bold text-teal-900">Technical Partner</span>, not just an admin.
          </p>

          <div class="flex flex-wrap gap-4 pt-4">
            <a href="#pricing" class="px-8 py-4 bg-[#1A565E] text-white font-bold rounded-lg hover:bg-[#134046] transition-all shadow-xl shadow-teal-900/10 flex items-center gap-2 group">
              View Retainers
              <ArrowUpRight class="w-4 h-4 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
            </a>
            <a href="#process" class="px-8 py-4 bg-white text-teal-900 font-bold rounded-lg border border-slate-200 hover:border-teal-200 hover:bg-teal-50 transition-all">
              How It Works
            </a>
          </div>

          <div class="flex items-center gap-6 text-sm text-slate-500 pt-4">
            <span class="flex items-center gap-2"><Check class="w-4 h-4 text-teal-600" /> No Agency Fees</span>
            <span class="flex items-center gap-2"><Check class="w-4 h-4 text-teal-600" /> Tech-Stack Agnostic</span>
          </div>

        </div>

        <!-- RIGHT: THE VISUAL -->
        <div class="relative">
          <HeroProcessor client:load />
          
          <div class="absolute -z-10 -top-10 -right-10 w-72 h-72 bg-[#9F89B6]/20 rounded-full blur-[80px]"></div>
          <div class="absolute -z-10 -bottom-10 -left-10 w-72 h-72 bg-[#6FA388]/20 rounded-full blur-[80px]"></div>
        </div>

      </div>
    </div>

    <!-- SERVICES SECTION -->
    <section id="services" class="py-24 bg-slate-50 border-y border-slate-200">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">Operational Pillars</h2>
          <p class="text-slate-600 text-lg">We don't act as a generalist for hire. We operate within structured pillars of expertise.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {services.map(service => (
            <div class="bg-white p-8 rounded-2xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow group">
              <div class="w-12 h-12 bg-purple-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <service.icon class="w-6 h-6 text-purple-600" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3">{service.title}</h3>
              <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>
              <ul class="space-y-3">
                {service.features.map(feature => (
                  <li class="flex items-center gap-2 text-sm text-slate-500">
                    <div class="w-1.5 h-1.5 rounded-full bg-purple-400"></div>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- PROCESS SECTION -->
    <section id="process" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">The Optimisation Process</h2>
          <p class="text-slate-600 text-lg">We don't guess. We follow a proven framework to audit, architect, and automate your business.</p>
        </div>

        <div class="relative">
          <!-- Connecting Line (Desktop) -->
          <div class="hidden md:block absolute top-1/2 left-0 w-full h-0.5 bg-slate-100 -translate-y-1/2 z-0"></div>

          <div class="grid grid-cols-1 md:grid-cols-4 gap-8 relative z-10">
            <!-- Step 1 -->
            <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm text-center group hover:-translate-y-1 transition-transform">
              <div class="w-16 h-16 bg-teal-50 rounded-full flex items-center justify-center mx-auto mb-6 border-4 border-white shadow-sm group-hover:scale-110 transition-transform">
                <span class="text-2xl font-bold text-teal-600">1</span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Discovery</h3>
              <p class="text-slate-600 text-sm">We audit your current workflows to identify bottlenecks and time-drains.</p>
            </div>

            <!-- Step 2 -->
            <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm text-center group hover:-translate-y-1 transition-transform">
              <div class="w-16 h-16 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-6 border-4 border-white shadow-sm group-hover:scale-110 transition-transform">
                <span class="text-2xl font-bold text-purple-600">2</span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Strategy</h3>
              <p class="text-slate-600 text-sm">We design a custom operational architecture tailored to your goals.</p>
            </div>

            <!-- Step 3 -->
            <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm text-center group hover:-translate-y-1 transition-transform">
              <div class="w-16 h-16 bg-teal-50 rounded-full flex items-center justify-center mx-auto mb-6 border-4 border-white shadow-sm group-hover:scale-110 transition-transform">
                <span class="text-2xl font-bold text-teal-600">3</span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Integration</h3>
              <p class="text-slate-600 text-sm">We implement the systems, tools, and automations while you focus on work.</p>
            </div>

            <!-- Step 4 -->
            <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm text-center group hover:-translate-y-1 transition-transform">
              <div class="w-16 h-16 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-6 border-4 border-white shadow-sm group-hover:scale-110 transition-transform">
                <span class="text-2xl font-bold text-purple-600">4</span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Optimisation</h3>
              <p class="text-slate-600 text-sm">We continuously refine and improve your systems as your business grows.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- WHY US SECTION -->
    <section class="py-24 bg-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="order-2 lg:order-1">
             <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-tr from-purple-600 to-pink-600 rounded-2xl rotate-3 opacity-10"></div>
                <div class="bg-slate-900 text-white p-10 rounded-2xl relative shadow-2xl">
                  <div class="text-purple-400 font-mono text-sm mb-4">/* THE DIFFERENCE */</div>
                  <h3 class="text-2xl font-bold mb-6">"I don't just do the task. I optimise it."</h3>
                  <p class="text-slate-300 leading-relaxed mb-6">
                    Most VAs will manually copy-paste data for you forever. I will do it manually once, then build a system to automate it for you.
                  </p>
                  <div class="flex items-center gap-4 pt-4 border-t border-slate-800">
                    <div class="w-10 h-10 rounded-full bg-purple-500 flex items-center justify-center font-bold">NB</div>
                    <div>
                      <div class="font-bold">Nicola Berry</div>
                      <div class="text-xs text-slate-400">Founder & Engineer-VA Hybrid</div>
                    </div>
                  </div>
                </div>
             </div>
          </div>
          <div class="order-1 lg:order-2 space-y-6">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900">Why hire an Engineer-VA Hybrid?</h2>
            <p class="text-lg text-slate-600">
              Because you need more than just an extra pair of hands. You need a safe pair of hands that can build, structure, and refine your operations.
            </p>
            <ul class="space-y-4 pt-4">
              <li class="flex items-start gap-3">
                <div class="mt-1 p-1 bg-green-100 rounded-full"><Check class="w-3 h-3 text-green-600" /></div>
                <span class="text-slate-700"><strong>System-First Mindset:</strong> We don't just patch holes; we fix the leak.</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="mt-1 p-1 bg-green-100 rounded-full"><Check class="w-3 h-3 text-green-600" /></div>
                <span class="text-slate-700"><strong>Tech-Savvy:</strong> Fluent in Asana, Notion, Zapier, and the tools you use.</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="mt-1 p-1 bg-green-100 rounded-full"><Check class="w-3 h-3 text-green-600" /></div>
                <span class="text-slate-700"><strong>Proactive:</strong> We anticipate bottlenecks before they become blockers.</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CALCULATOR SECTION -->
    <section class="py-24 bg-slate-900 text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">The Cost of Chaos</h2>
          <p class="text-slate-400 text-lg max-w-2xl mx-auto">
            You might think you're saving money by doing it yourself. You're not. Calculate your actual opportunity cost below.
          </p>
        </div>
        
        <OverwhelmCalculator client:visible />
      </div>
    </section>

    <!-- PRICING SECTION -->
    <section id="pricing" class="py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">Peace of Mind Packages</h2>
          <p class="text-slate-600 text-lg">Move away from hourly tracking. Invest in a retainer that guarantees availability and focus.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {pricing.map((plan) => (
            <div class={`relative bg-white rounded-2xl p-8 border ${plan.popular ? 'border-purple-500 shadow-xl scale-105 z-10' : 'border-slate-200 shadow-sm'} flex flex-col`}>
              {plan.popular && (
                <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                  Most Popular
                </div>
              )}
              <div class="mb-8">
                <h3 class="text-lg font-bold text-slate-900">{plan.name}</h3>
                <div class="text-sm text-slate-500 mb-4">{plan.tagline}</div>
                <div class="flex items-baseline gap-1">
                  <span class="text-4xl font-extrabold text-slate-900">{plan.price}</span>
                  <span class="text-slate-500">/month</span>
                </div>
                <div class="text-sm font-medium text-purple-600 mt-2 bg-purple-50 inline-block px-2 py-1 rounded">
                  {plan.hours} included
                </div>
              </div>
              
              <ul class="space-y-4 mb-8 flex-1">
                {plan.features.map(feature => (
                  <li class="flex items-center gap-3 text-sm text-slate-600">
                    <Check class="w-4 h-4 text-green-500 flex-shrink-0" />
                    {feature}
                  </li>
                ))}
              </ul>

              <a href="/contact" class={`block w-full py-3 px-6 rounded-lg font-bold text-center transition-all ${
                plan.popular 
                  ? 'bg-purple-600 text-white hover:bg-purple-700 shadow-lg shadow-purple-600/20' 
                  : 'bg-slate-100 text-slate-900 hover:bg-slate-200'
              }`}>
                Get Started
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CONTACT CTA -->
    <section id="contact" class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-6 tracking-tight">
          Ready to reclaim your time?
        </h2>
        <p class="text-xl text-slate-600 mb-10">
          Slots are limited to ensure premium service quality. Book a discovery call to see if we're a good fit.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 px-8 py-4 bg-slate-900 text-white font-bold rounded-lg hover:bg-slate-800 transition-all shadow-xl shadow-slate-900/10 text-lg">
          Book Discovery Call 
        </a>
      </div>
    </section>

  </main>
</MainLayout>
