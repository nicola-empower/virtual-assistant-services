---
export const prerender = true;
import MainLayout from "../layouts/MainLayout.astro";
import HeroBackground from "../components/HeroBackground.astro";
import {
  Mail,
  CalendarDays,
  Plane,
  Database,
  Folder,
  FileText,
  Sheet,
  Presentation,
  Captions,
  Users,
  ClipboardList,
  Contact,
  Receipt,
  FileCheck2,
  FileCog,
  Rocket,
  DollarSign,
  TrendingUp,
  Laptop,
  Settings,
  ShieldCheck,
  HelpCircle,
  Filter,
  MessageSquare,
  ArrowRight,
} from "lucide-react";

const adminServices = [
  { icon: Mail, text: "Email Management & Organisation" },
  { icon: CalendarDays, text: "Calendar & Appointment Management" },
  { icon: Plane, text: "Travel Planning & Booking" },
  { icon: Database, text: "Data Entry & Database Management" },
  { icon: Folder, text: "File Organisation (Digital & Cloud-Based)" },
  { icon: FileText, text: "Document Formatting & Proofreading" },
  { icon: Sheet, text: "Spreadsheet Creation & Management" },
  { icon: Presentation, text: "Presentation Preparation" },
  { icon: Captions, text: "Transcription Services" },
  { icon: Users, text: "Meeting Scheduling & Coordination" },
  { icon: ClipboardList, text: "Meeting Minutes & Action Item Tracking" },
  { icon: Contact, text: "CRM System Management" },
  { icon: Receipt, text: "Preparing Invoices" },
  { icon: FileCheck2, text: "Online Forms Creation" },
  { icon: FileCog, text: "Process Documentation and SOP Creation" },
];

const benefits = [
  {
    icon: Rocket,
    title: "Increase Productivity",
    description:
      "Free yourself from time-consuming admin to concentrate on revenue-generating activities and strategic planning.",
  },
  {
    icon: DollarSign,
    title: "Reduce Overheads",
    description:
      "Get expert support without the costs associated with hiring a full-time employee, such as office space and benefits.",
  },
  {
    icon: TrendingUp,
    title: "Improve Scalability",
    description:
      "Easily scale your support up or down based on your current workload and business needs, ensuring flexibility.",
  },
];
---

<MainLayout title="Services | Empower VA">
  <main class="relative min-h-screen">
    <HeroBackground />

    <!-- HERO SECTION -->
    <section class="relative pt-32 pb-20 z-10">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-50 border border-teal-100 text-xs font-bold text-teal-800 uppercase tracking-wide mb-6"
        >
          <span class="w-2 h-2 rounded-full bg-teal-600"></span>
          Foundational Support
        </div>
        <h1
          class="text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-white mb-6 tracking-tight"
        >
          The Support Your Business <br />
          <span
            class="text-transparent bg-clip-text bg-linear-to-r from-teal-600 to-purple-600 dark:from-teal-300 dark:to-purple-300"
            >Needs to Thrive</span
          >
        </h1>
        <p
          class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto leading-relaxed"
        >
          Are you overwhelmed by daily administrative tasks? My Virtual
          Assistant service provides the reliable, efficient, and proactive
          support you need to regain control of your schedule.
        </p>
      </div>
    </section>

    <!-- ADMIN SERVICES GRID -->
    <section class="py-20 bg-white border-y border-slate-200">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
          <div class="order-2 md:order-1">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-100 text-teal-700 text-xs font-bold uppercase tracking-wide mb-6"
            >
              Core Service
            </div>
            <h2 class="text-3xl font-bold text-slate-900 mb-6">
              Administrative Support
            </h2>
            <p class="text-slate-600 mb-8 leading-relaxed text-lg">
              I handle a comprehensive range of administrative tasks to keep
              your operations running smoothly and efficiently. From inbox
              management to complex travel logistics.
            </p>
            <a
              href="/services/admin-assistance"
              class="inline-flex items-center gap-2 px-6 py-3 bg-teal-600 text-white font-bold rounded-lg hover:bg-teal-700 transition-all shadow-lg shadow-teal-900/10 group"
            >
              View Admin Details <ArrowRight
                className="w-4 h-4 group-hover:translate-x-1 transition-transform"
              />
            </a>
          </div>

          <div
            class="order-1 md:order-2 bg-white p-8 rounded-2xl border border-slate-200 shadow-sm relative overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-teal-500/10 rounded-full blur-3xl -mr-16 -mt-16"
            >
            </div>
            <div class="relative z-10 grid grid-cols-2 gap-4">
              <div class="bg-slate-50 p-4 rounded-xl text-center">
                <Mail className="w-8 h-8 text-teal-600 mx-auto mb-2" />
                <div class="text-sm font-bold text-slate-700">Inbox</div>
              </div>
              <div class="bg-slate-50 p-4 rounded-xl text-center">
                <CalendarDays
                  className="w-8 h-8 text-purple-600 mx-auto mb-2"
                />
                <div class="text-sm font-bold text-slate-700">Calendar</div>
              </div>
              <div class="bg-slate-50 p-4 rounded-xl text-center">
                <Plane className="w-8 h-8 text-blue-600 mx-auto mb-2" />
                <div class="text-sm font-bold text-slate-700">Travel</div>
              </div>
              <div class="bg-slate-50 p-4 rounded-xl text-center">
                <Database className="w-8 h-8 text-orange-500 mx-auto mb-2" />
                <div class="text-sm font-bold text-slate-700">Data</div>
              </div>
            </div>
          </div>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            adminServices.map((service) => (
              <div class="flex items-start p-6 bg-white rounded-xl border border-slate-100 shadow-sm hover:shadow-md hover:border-teal-100 transition-all group">
                <div class="p-2 bg-teal-50 rounded-lg mr-4 group-hover:scale-110 transition-transform">
                  <service.icon className="w-5 h-5 text-teal-600" />
                </div>
                <span class="text-slate-700 font-medium pt-1">
                  {service.text}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>

  <!-- EMAIL MANAGEMENT SECTION -->
  <section class="py-20 bg-slate-50 border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div
          class="order-1 md:order-2 bg-white p-8 rounded-2xl border border-slate-200 shadow-sm relative overflow-hidden"
        >
          <div
            class="absolute top-0 left-0 w-32 h-32 bg-purple-500/10 rounded-full blur-3xl -ml-16 -mt-16"
          >
          </div>
          <div class="relative z-10 grid grid-cols-2 gap-4">
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <Mail className="w-8 h-8 text-teal-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Inbox Zero</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <Filter className="w-8 h-8 text-purple-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Filtering</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <MessageSquare className="w-8 h-8 text-blue-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Replies</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <ShieldCheck className="w-8 h-8 text-orange-500 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Spam</div>
            </div>
          </div>
        </div>

        <div class="order-2 md:order-1">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-100 text-purple-700 text-xs font-bold uppercase tracking-wide mb-6"
          >
            Time Saver
          </div>
          <h2 class="text-3xl font-bold text-slate-900 mb-6">
            Email Management
          </h2>
          <p class="text-slate-600 mb-8 leading-relaxed text-lg">
            Stop drowning in unread messages. We implement systems to declutter,
            prioritise, and manage your email so you never miss an opportunity
            again.
          </p>
          <a
            href="/services/email-management"
            class="inline-flex items-center gap-2 px-6 py-3 bg-teal-600 text-white font-bold rounded-lg hover:bg-teal-700 transition-all shadow-lg shadow-teal-900/10 group"
          >
            View Email Services <ArrowRight
              className="w-4 h-4 group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- SPECIALIZED TECH SUPPORT SECTION -->
  <section class="py-20 bg-slate-50 border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="order-2 md:order-1">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-100 text-purple-700 text-xs font-bold uppercase tracking-wide mb-6"
          >
            New Service
          </div>
          <h2 class="text-3xl font-bold text-slate-900 mb-6">
            Specialised Technical Support
          </h2>
          <p class="text-slate-600 mb-8 leading-relaxed text-lg">
            Beyond general administration, we offer dedicated technical
            assistance to keep your business systems online and secure. From
            troubleshooting weird glitches to setting up your entire digital
            workspace.
          </p>
          <ul class="space-y-4 mb-8">
            <li class="flex items-center gap-3 text-slate-700">
              <div class="w-2 h-2 rounded-full bg-purple-500"></div> Remote IT Troubleshooting
            </li>
            <li class="flex items-center gap-3 text-slate-700">
              <div class="w-2 h-2 rounded-full bg-purple-500"></div> Software Installation
              & Setup
            </li>
            <li class="flex items-center gap-3 text-slate-700">
              <div class="w-2 h-2 rounded-full bg-purple-500"></div> System Maintenance
            </li>
          </ul>
          <a
            href="/services/tech-support"
            class="inline-flex items-center gap-2 text-purple-700 font-bold hover:text-purple-900 transition-colors group"
          >
            View Tech Support Services <ArrowRight
              className="w-4 h-4 group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
        <div
          class="order-1 md:order-2 bg-white p-8 rounded-2xl border border-slate-200 shadow-sm relative overflow-hidden"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-purple-500/10 rounded-full blur-3xl -mr-16 -mt-16"
          >
          </div>
          <div class="relative z-10 grid grid-cols-2 gap-4">
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <Laptop className="w-8 h-8 text-purple-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Hardware</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <Settings className="w-8 h-8 text-teal-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Config</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <ShieldCheck className="w-8 h-8 text-blue-600 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Security</div>
            </div>
            <div class="bg-slate-50 p-4 rounded-xl text-center">
              <HelpCircle className="w-8 h-8 text-orange-500 mx-auto mb-2" />
              <div class="text-sm font-bold text-slate-700">Support</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- BENEFITS SECTION -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          Focus On What You Do Best
        </h2>
        <p class="text-slate-700 max-w-2xl mx-auto">
          Partnering with a Virtual Assistant is more than just outsourcing
          tasks; it's a strategic investment in your business's growth.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          benefits.map((benefit) => (
            <div class="p-8 bg-slate-50 rounded-2xl border border-slate-200 text-center hover:border-teal-200 transition-colors">
              <div class="w-14 h-14 bg-white rounded-full flex items-center justify-center mx-auto mb-6 shadow-sm">
                <benefit.icon className="w-7 h-7 text-teal-600" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3">
                {benefit.title}
              </h3>
              <p class="text-slate-600 leading-relaxed">
                {benefit.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- SISTER AGENCIES SECTION -->
  <section class="py-24 bg-slate-900 overflow-hidden relative">
    <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 text-xs font-bold uppercase tracking-wide mb-4"
        >
          The Empower Ecosystem
        </div>
        <h2 class="text-3xl font-bold text-white mb-4">
          Complete Digital Coverage
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          We don't just fix computers. Through our sister agencies, we build
          enterprise-grade platforms and automate complex workflows.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <!-- Automation -->
        <a
          href="https://empowerautomation.co.uk"
          target="_blank"
          class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-teal-500/50 transition-colors"
        >
          <div
            class="absolute top-4 right-4 text-slate-600 group-hover:text-teal-400 transition-colors"
          >
            <ArrowRight
              className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
            />
          </div>
          <div
            class="w-12 h-12 rounded-lg bg-teal-500/10 flex items-center justify-center mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-teal-400"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M12 2v4"></path><path d="m16.2 7.8 2.9-2.9"></path><path
                d="M18 12h4"></path><path d="m16.2 16.2 2.9 2.9"></path><path
                d="M12 18v4"></path><path d="m4.9 19.1 2.9-2.9"></path><path
                d="M2 12h4"></path><path d="m4.9 4.9 2.9 2.9"></path></svg
            >
          </div>
          <h3
            class="text-xl font-bold text-white mb-2 group-hover:text-teal-400 transition-colors"
          >
            Empower Automation
          </h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            Zapier, Make.com, and custom scripts to put your business on
            autopilot.
          </p>
        </a>

        <!-- Digital Solutions -->
        <a
          href="https://empowerdigitalsolutions.co.uk"
          target="_blank"
          class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-purple-500/50 transition-colors"
        >
          <div
            class="absolute top-4 right-4 text-slate-600 group-hover:text-purple-400 transition-colors"
          >
            <ArrowRight
              className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
            />
          </div>
          <div
            class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-purple-400"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><rect width="20" height="14" x="2" y="3" rx="2"></rect><line
                x1="8"
                x2="16"
                y1="21"
                y2="21"></line><line x1="12" x2="12" y1="17" y2="21"
              ></line></svg
            >
          </div>
          <h3
            class="text-xl font-bold text-white mb-2 group-hover:text-purple-400 transition-colors"
          >
            Empower Digital
          </h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            High-performance bespoke websites and custom web applications.
          </p>
        </a>

        <!-- Portfolio -->
        <a
          href="https://nicolaberry.uk"
          target="_blank"
          class="group relative bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-amber-500/50 transition-colors"
        >
          <div
            class="absolute top-4 right-4 text-slate-600 group-hover:text-amber-400 transition-colors"
          >
            <ArrowRight
              className="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform"
            />
          </div>
          <div
            class="w-12 h-12 rounded-lg bg-amber-500/10 flex items-center justify-center mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-amber-400"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="m16 18 2 2 4-4"></path><path d="M16 2v4"></path><path
                d="M8 2v4"></path><path d="M3 10h18"></path><path d="M10 14h4"
              ></path><path d="M12 14v4"></path><rect
                x="3"
                y="4"
                width="18"
                height="16"
                rx="2"></rect></svg
            >
          </div>
          <h3
            class="text-xl font-bold text-white mb-2 group-hover:text-amber-400 transition-colors"
          >
            Nicola Berry
          </h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            Senior Developer Portfolio. View code samples and engineering
            projects.
          </p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="py-24 bg-[#1A565E] relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
    <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Reclaim Your Time?
      </h2>
      <p class="text-teal-100 text-lg mb-10 max-w-2xl mx-auto">
        Let's discuss your administrative challenges and create a support plan
        that gives you back your time and peace of mind.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-teal-900 font-bold rounded-lg hover:bg-teal-50 transition-all shadow-xl text-lg"
      >
        Get Started Today <ArrowRight className="w-5 h-5" />
      </a>
    </div>
  </section>
</MainLayout>
