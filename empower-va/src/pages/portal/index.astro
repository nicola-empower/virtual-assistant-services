---
export const prerender = true;
import ClientPortalLayout from "../../layouts/ClientPortalLayout.astro";
import { Wrench } from "lucide-react";
---

<ClientPortalLayout title="Maintenance | Portal">
    <div
        class="flex flex-col items-center justify-center min-h-[50vh] text-center"
    >
        <div class="bg-amber-100 p-6 rounded-full mb-6">
            <Wrench className="w-12 h-12 text-amber-600" />
        </div>
        <h1 class="text-3xl font-bold text-slate-900 mb-4">
            Portal Under Maintenance
        </h1>
        <p class="text-slate-600 max-w-md mx-auto mb-8">
            We are currently upgrading our Client Portal to improve security and
            performance. Please check back shortly.
        </p>
        <a
            href="/"
            class="px-6 py-3 bg-slate-900 text-white rounded-lg font-bold hover:bg-slate-800 transition-colors"
        >
            Return to Home
        </a>
    </div>
</ClientPortalLayout>
