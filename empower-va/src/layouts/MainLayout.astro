---
import "@fontsource/inter";
import "@fontsource/lato";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import JsonLd from "../components/JsonLd.astro";

import { ClientRouter } from "astro:transitions";

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
}

const {
	title,
	description = "Empower Virtual Assistant Services - Reclaim Your Time. Professional VA services for small businesses in Stirlingshire and beyond.",
	image = "/default-og.svg",
	type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="/manifest.json" />

		{/* Canonical URL */}
		<link rel="canonical" href={canonicalURL} />

		{/* Primary Meta Tags */}
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		{/* Open Graph / Facebook */}
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		{/* Twitter */}
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		{/* Sitemap */}
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ClientRouter />

		{/* Google Analytics */}
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-KBHVHTKDH0"
			is:inline></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());
			gtag("config", "G-KBHVHTKDH0");
		</script>
		<JsonLd
			schema={{
				"@context": "https://schema.org",
				"@type": "Organization",
				name: "Empower Virtual Assistant Services",
				url: "https://empowervaservices.co.uk",
				logo: "https://empowervaservices.co.uk/logo.png",
				sameAs: [
					"https://www.linkedin.com/in/nicola-berry-virtual-assistant/",
					"https://www.facebook.com/empowervaservices",
				],
				contactPoint: {
					"@type": "ContactPoint",
					email: "nicola@empowervaservices.co.uk",
					contactType: "customer support",
					areaServed: "GB",
				},
			}}
		/>
	</head>

	<body
		class="font-sans text-slate-900 bg-slate-50 dark:bg-slate-900 dark:text-white antialiased selection:bg-purple-100 selection:text-purple-900 dark:selection:bg-purple-900 dark:selection:text-purple-100"
	>
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:start-0 focus:z-50 focus:p-4 focus:bg-white focus:text-purple-700 focus:font-bold transition-all"
		>
			Skip to content
		</a>
		<Navbar />
		<div id="main-content">
			<slot />
		</div>
		<Footer />
		<!-- Build Version: 2025-12-21 v2 (Static Dist) -->
		<script is:inline>
			if ("serviceWorker" in navigator) {
				window.addEventListener("load", () => {
					navigator.serviceWorker.register("/sw.js");
				});
			}
		</script>
	</body>
</html>
