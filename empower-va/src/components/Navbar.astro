---
import { Menu } from "lucide-react";
import SiteSearch from "./SiteSearch";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<nav
  class="fixed w-full z-50 top-0 start-0 border-b border-slate-200 bg-white/80 dark:bg-slate-900/80 dark:border-slate-800 backdrop-blur-md"
>
  <div
    class="max-w-7xl mx-auto flex flex-wrap items-center justify-between px-6 py-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image
        src={logoImage}
        alt="Empower VA Logo"
        class="h-10 w-auto"
        loading="eager"
        width={160}
        height={40}
      />
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-slate-500 dark:text-slate-400 rounded-lg md:hidden hover:bg-slate-100 dark:hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-200 dark:focus:ring-slate-700"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <Menu className="w-5 h-5" />
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-slate-100 dark:border-slate-800 rounded-lg bg-slate-50 dark:bg-slate-800 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent dark:md:bg-transparent"
      >
        <li>
          <a
            href="/"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >About</a
          >
        </li>
        <li>
          <a
            href="/services"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Services</a
          >
        </li>
        <li>
          <a
            href="/portfolio"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Portfolio</a
          >
        </li>
        <li>
          <a
            href="/#process"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Process</a
          >
        </li>
        <li>
          <a
            href="/#pricing"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Pricing</a
          >
        </li>
        <li>
          <a
            href="/edge"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >The Edge</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class="block py-2 px-3 text-slate-900 dark:text-white rounded hover:bg-slate-100 dark:hover:bg-slate-700 md:hover:bg-transparent md:border-0 md:hover:text-purple-700 dark:md:hover:text-purple-400 md:p-0"
            >Contact</a
          >
        </li>
        <li class="md:ml-4">
          <SiteSearch client:idle />
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Basic mobile menu toggle
  const button = document.querySelector(
    '[data-collapse-toggle="navbar-default"]',
  );
  const menu = document.getElementById("navbar-default");

  if (button && menu) {
    button.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>
