---
const currentYear = new Date().getFullYear();
---

<footer
    class="bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800"
>
    <div class="w-full max-w-7xl mx-auto p-4 md:py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            {/* Column 1: Brand & Location */}
            <div class="space-y-4">
                <a
                    href="/"
                    class="flex items-center space-x-3 rtl:space-x-reverse"
                >
                    <img src="/logo.png" class="h-10" alt="Empower VA Logo" />
                </a>
                <div
                    class="text-slate-500 dark:text-slate-400 text-sm space-y-2"
                >
                    <p class="flex items-center gap-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-brand-lilac"
                            ><path
                                d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                            ></path><circle cx="12" cy="10" r="3"></circle></svg
                        >
                        Falkirk, Scotland
                    </p>
                    <p class="flex items-center gap-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-brand-lilac"
                            ><rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect><path
                                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path></svg
                        >
                        <a
                            href="mailto:nicola@empowervaservices.co.uk"
                            class="hover:text-brand-lilac transition-colors"
                            >nicola@empowervaservices.co.uk</a
                        >
                    </p>
                </div>
            </div>

            {/* Column 2: Quick Links */}
            <div>
                <h3 class="font-bold text-slate-800 dark:text-white mb-4">
                    Quick Links
                </h3>
                <ul
                    class="space-y-3 text-sm text-slate-500 dark:text-slate-400"
                >
                    <li>
                        <a
                            href="/about"
                            class="hover:text-brand-lilac transition-colors"
                            >About Me</a
                        >
                    </li>
                    <li>
                        <a
                            href="/portfolio"
                            class="hover:text-brand-lilac transition-colors"
                            >Portfolio</a
                        >
                    </li>
                    <li>
                        <a
                            href="/tools/admin-suite"
                            class="hover:text-brand-lilac transition-colors"
                            >Admin Login</a
                        >
                    </li>
                    <li>
                        <a
                            href="/client-login"
                            class="hover:text-brand-lilac transition-colors"
                            >Client Portal</a
                        >
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="hover:text-brand-lilac transition-colors"
                            >Contact</a
                        >
                    </li>
                </ul>
            </div>

            {/* Column 3: Opening Hours & Legal */}
            <div>
                <h3 class="font-bold text-slate-800 dark:text-white mb-4">
                    Opening Hours
                </h3>
                <div
                    class="space-y-2 text-sm text-slate-500 dark:text-slate-400"
                >
                    <p class="flex items-center gap-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-brand-lilac"
                            ><circle cx="12" cy="12" r="10"></circle><polyline
                                points="12 6 12 12 16 14"></polyline></svg
                        >
                        Monday - Friday
                    </p>
                    <p
                        class="ml-6 font-medium text-slate-700 dark:text-slate-300"
                    >
                        10:00 AM - 6:00 PM
                    </p>
                </div>

                <div class="mt-6 flex flex-wrap gap-4 text-xs text-slate-400">
                    <a href="/privacy-policy" class="hover:underline"
                        >Privacy Policy</a
                    >
                    <a href="/terms-conditions" class="hover:underline"
                        >Terms & Conditions</a
                    >
                </div>
            </div>
        </div>

        <hr class="my-6 border-slate-200 dark:border-slate-800" />

        <div class="sm:flex sm:items-center sm:justify-between">
            <div class="text-sm text-slate-500 dark:text-slate-400">
                &copy; {currentYear} Empower VA Services.
                <span
                    class="block sm:inline sm:ml-2 mt-1 sm:mt-0 text-xs text-slate-400"
                >
                    Powered by <a
                        href="https://empowerdigitalsolutions.co.uk/"
                        target="_blank"
                        class="hover:text-purple-600 transition-colors"
                        >Empower Digital Solutions</a
                    >
                </span>
            </div>

            <div class="mt-4 sm:mt-0">
                <img
                    src="/insurance-logo.webp"
                    alt="Insured by PolicyBee"
                    class="h-10 opacity-70 grayscale hover:grayscale-0 transition-all"
                />
            </div>
        </div>
    </div>
</footer>
